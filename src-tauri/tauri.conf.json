{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Claude Workspace",
  "version": "0.3.4",
  "identifier": "com.claude-workspace.app",
  "build": {
    "frontendDist": "loading",
    "devUrl": "http://localhost:8556",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Claude Workspace",
        "url": "index.html",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* ws://localhost:*; connect-src 'self' http://localhost:* ws://localhost:* https://github.com https://api.github.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' http://localhost:* https://cdn.jsdelivr.net https://raw.githubusercontent.com data: blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/sidecar"],
    "resources": [
      "resources/**/*"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/Claude-Workspace/claude-ws/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
